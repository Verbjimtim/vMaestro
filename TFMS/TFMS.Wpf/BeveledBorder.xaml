<UserControl x:Class="TFMS.Wpf.BeveledBorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TFMS.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Height="Auto" Width="Auto">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:TopLeftBevelThicknessConverter x:Key="TopLeftBevelThicknessConverter"/>
            <local:BottomRightBevelThicknessConverter x:Key="BottomRightBevelThicknessConverter"/>

            <Style x:Key="BottomRightBorderStyle" TargetType="{x:Type Border}">
                <Setter Property="BorderBrush" Value="{StaticResource DarkBrush}"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding BevelType, RelativeSource={RelativeSource AncestorType={x:Type local:BeveledBorder}}}" Value="Sunken">
                        <Setter Property="BorderBrush" Value="{StaticResource LightBrush}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="TopLeftBorderStyle" TargetType="{x:Type Border}">
                <Setter Property="BorderBrush" Value="{StaticResource LightBrush}"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding BevelType, RelativeSource={RelativeSource AncestorType={x:Type local:BeveledBorder}}}" Value="Sunken">
                        <Setter Property="BorderBrush" Value="{StaticResource DarkBrush}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Border Style="{DynamicResource BottomRightBorderStyle}" BorderThickness="{Binding Gurth, RelativeSource={RelativeSource AncestorType={x:Type local:BeveledBorder}}, Converter={StaticResource BottomRightBevelThicknessConverter}}" />
        <Border Style="{DynamicResource TopLeftBorderStyle}" BorderThickness="{Binding Gurth, RelativeSource={RelativeSource AncestorType={x:Type local:BeveledBorder}}, Converter={StaticResource TopLeftBevelThicknessConverter}}" />
        <StackPanel Name="Content" Margin="{Binding Gurth, RelativeSource={RelativeSource AncestorType={x:Type local:BeveledBorder}}}"/>
    </Grid>
</UserControl>
