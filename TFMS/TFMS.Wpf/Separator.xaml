<UserControl x:Class="TFMS.Wpf.Separator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TFMS.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:HalfConverter x:Key="HalfConverter" />

            <Style x:Key="Separator" TargetType="{x:Type Rectangle}">
                <Setter Property="Height" Value="{Binding Height, RelativeSource={RelativeSource AncestorType={x:Type local:Separator}}, Converter={StaticResource HalfConverter}}"/>
                <Setter Property="Width" Value="{Binding Width, Converter={StaticResource HalfConverter}}"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Orientation, RelativeSource={RelativeSource AncestorType={x:Type local:Separator}}}" Value="Horizontal">
                        <Setter Property="Width" Value="{Binding Width, RelativeSource={RelativeSource AncestorType={x:Type local:Separator}}, Converter={StaticResource HalfConverter}}"/>
                        <Setter Property="Height" Value="{Binding Height, RelativeSource={RelativeSource AncestorType={x:Type local:Separator}}}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Orientation="{Binding Orientation, RelativeSource={RelativeSource AncestorType={x:Type local:Separator}}}">
        <Rectangle Style="{DynamicResource Separator}" Fill="{StaticResource LightBrush}" />
        <Rectangle Style="{DynamicResource Separator}" Fill="{StaticResource DarkBrush}" />
    </StackPanel>
</UserControl>
